@model Rental.Data.Data.Rental.Message

@{
    ViewData["Title"] = "Zredaguj wiadomość";
    ViewBag.PageTitle = "Zredaguj wiadomość";
}

<div class="row mb-4 justify-content-center">
    <div class="col-md-12">
        @await Html.PartialAsync("Navi")
    </div>
    <div class="col-md-12">
        <div class="card border-top-0 rounded-0 rounded-bottom">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">

                        <div class="p-4 mt-4 md-4">
                            <form asp-action="Create" asp-controller="Messages" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group col-md-6">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="label1">Grupa odbiorców</span>
                                            </div>
                                            <select asp-for="UserTypeName" class="form-control" asp-items="ViewBag.UserTypeName"></select>
                                        </div>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="label1">Tytuł</span>
                                            </div>
                                            <input asp-for="Title" class="form-control" aria-describedby="label1" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-lg-6">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="label1">Data od</span>
                                            </div>
                                            <input type="date" placeholder="Wybierz datę" id="StartDatePicker" class="form-control" asp-for="StartDate" autocomplete="off" />
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group col-lg-6">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="label1">Data do</span>
                                            </div>
                                            <input type="date" placeholder="Wybierz datę" id="EndDatePicker" asp-for="ExpirationDate" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-12">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Treść</span>
                                            </div>
                                            <textarea asp-for="MessageContent" class="form-control" rows="4"></textarea>
                                            <span asp-validation-for="MessageContent" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <input type="submit" value="Utwórz" class="btn btn-success float-right buttMargin" />
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>