@*@model Rental.Data.Data.HelpersClass.Car*@
@model Rental_Data.Data.Rental.Vehicle
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vehicle</h4>
<hr />

<div class="container">
    <form asp-action="Create">
        <div class="row">

            <div class="col-sm-6">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.EquipmentID" class="control-label"></label>
                    <select asp-for="@Model.ExactTypeID" class="form-control" asp-items="ViewBag.ExactTypeID"></select>
                </div>
                <div class="form-group">

                    <label asp-for="@Model.BrandID" class="control-label"></label>
                    <select asp-for="@Model.BrandID" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfBrads,"BrandID","Name"))"></select>
                </div>
                <div class="form-group">

                    <label asp-for="@Model.VehicleModelID" class="control-label"></label>
                    @*<select class="form-control" id="VehicleModelID" name="VehicleModelID" asp-for="@Model.GetVehicle.VehicleModelID" asp-items="@(new SelectList(string.Empty, "VehicleModelID", "Name"))"></select>*@
                    <select class="form-control" name="VehicleModelID" asp-for="@Model.VehicleModelID" asp-items="@ViewBag.ModelList"></select>
                </div>

                <script src="~/lib/jquery/dist/jquery.js"></script>
                <script type="text/javascript">

                $(document).ready(function () {
                    var items = "<option value='0'>SELECT</option>";
                    $('#VehicleModelID').html(items);
                });

                $(document).ready(function () {
                    $('#BrandID').change(function () {
                        var url = '@Url.Content("~/")' + "Vehicles/GetModel";
                        //var url =  = "Vehicles/GetModel";
                        var ddlsource = "#BrandID";
                        $.getJSON(url, { BrandID: $(ddlsource).val() }, function (data) {
                            var items = '';
                            $("#VehicleModelID").empty();
                            $.each(data, function (i, modele) {
                                items += "<option value='" + modele.value + "'>" + modele.text + "</option>";
                            });
                            $('#VehicleModelID').html(items);
                        });
                    });
                });

                </script>



                <div class="form-group">
                    <label asp-for="@Model.YearOfProduction" class="control-label"></label>
                    <input asp-for="@Model.YearOfProduction" class="form-control" />
                    <span asp-validation-for="@Model.YearOfProduction" class="text-danger"></span>
                </div>
            </div>



            <div class="col-sm-6">
                <img src="~/img/noimg.png" />
            </div>



            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="@Model.Description" class="control-label"></label>
                    <textarea asp-for="@Model.Description" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
            </div>



            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="@Model.VIN" class="control-label"></label>
                    <input asp-for="@Model.VIN" class="form-control" />
                    <span asp-validation-for="@Model.VIN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.EngineCapacity" class="control-label"></label>
                    @*<input asp-for="EngineCapacity" class="form-control" />*@
                    <select name="EngineCapacity" class="form-control">
                        @for (int i = 0; i < 6000; i += 100)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.EngineCapacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.EngineTypeID" class="control-label"></label>
                    <select asp-for="@Model.EngineTypeID" class="form-control" asp-items="ViewBag.EngineTypeID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Mileage" class="control-label"></label>
                    <input asp-for="@Model.Mileage" class="form-control" />
                    <span asp-validation-for="@Model.Mileage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.GearBoxID" class="control-label"></label>
                    <select asp-for="@Model.GearBoxID" class="form-control" asp-items="ViewBag.GearBoxID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.WheelDriveID" class="control-label"></label>
                    <select asp-for="@Model.WheelDriveID" class="form-control" asp-items="ViewBag.WheelDriveID"></select>
                </div>

            </div>



            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="@Model.Equipment.AirConditioningID" class="control-label"></label>
                    @*<select asp-for="AirConditioningID" class="form-control" asp-items="ViewBag.AirConditioningID"></select>*@
                    <select asp-for="@Model.Equipment.AirConditioningID" class="form-control" asp-items="@ViewBag.AirConditioningID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ColourID" class="control-label"></label>
                    <select asp-for="@Model.ColourID" class="form-control" asp-items="ViewBag.ColourID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NumberPlate" class="control-label"></label>
                    <input asp-for="@Model.NumberPlate" class="form-control" />
                    <span asp-validation-for="@Model.NumberPlate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.EnginePower" class="control-label"></label>
                    <input asp-for="@Model.EnginePower" class="form-control" />
                    <span asp-validation-for="@Model.EnginePower" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NumberOfSeats" class="control-label"></label>
                    <input asp-for="@Model.NumberOfSeats" class="form-control" />
                    <span asp-validation-for="@Model.NumberOfSeats" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NumberOfDoors" class="control-label"></label>
                    <input asp-for="@Model.NumberOfDoors" class="form-control" />
                    <span asp-validation-for="@Model.NumberOfDoors" class="text-danger"></span>
                </div>
            </div>



            @************************************ Wyposazenie ***************************************@

        <div class="col-sm-12">
            <h4>Wyposażenie</h4>
            <hr />
        </div>

            <div class="col-sm-4">

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.ABS" /> @Html.DisplayNameFor(model => model.Equipment.ABS)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.AUX" /> @Html.DisplayNameFor(model => model.Equipment.AUX)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.ISOFIX" /> @Html.DisplayNameFor(model => model.Equipment.ISOFIX)
                    </label>
                </div>

            </div>
            <div class="col-sm-4">


                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.CD" /> @Html.DisplayNameFor(model => model.Equipment.CD)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.SD" /> @Html.DisplayNameFor(model => model.Equipment.SD)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.USB" /> @Html.DisplayNameFor(model => model.Equipment.USB)
                    </label>
                </div>

            </div>
            <div class="col-sm-4">

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.CruiseControl" /> @Html.DisplayNameFor(model => model.Equipment.CruiseControl)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.Navigation" /> @Html.DisplayNameFor(model => model.Equipment.Navigation)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.Airbag" /> @Html.DisplayNameFor(model => model.Equipment.Airbag)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="@Model.Equipment.PowerSteering" /> @Html.DisplayNameFor(model => model.Equipment.PowerSteering)
                    </label>
                </div>










            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>




