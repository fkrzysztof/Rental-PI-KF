@model Rental_Data.Data.Rental.ExactType

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 mb-2">

                        <span class="float-left"><i class="fas fa-folder-open mr-2"></i>Lista aktualnych pozycji</span>
                        <button class="btn text-primary float-right" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample"><i class="fas fa-sliders-h"></i></button>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="text-center collapse show" id="collapseExample" style="">
                            <div class="card card-body">
                                <form asp-action="Index" method="get">
                                    <div class="row">
                                        <div class="col-sm-10">
                                            <select name="generalType" class="form-control" asp-items="ViewBag.GeneralTypeID">
                                                <option disabled selected value="">Wybierz typ..</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-2">
                                            <button type="submit" class="btn text-primary"><i class="fas fa-search"></i></button>
                                            <button asp-action="Index" class="btn text-primary"><i class="fas fa-ban"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <table class="table table-borderless table-hover">
                            <thead>
                                <tr>
                                    <th class="text-left">
                                        @Html.DisplayNameFor(model => model.GeneralType)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.GeneralTypeCollection)
                                {
                                    <tr>
                                        <td class="text-left">
                                            @item.GeneralType.Name
                                        </td>
                                        <td class="text-center">
                                            @item.Name
                                        </td>
                                        <td class="text-right">
                                            <script src="~/js/jquery-1.10.2.js"></script>
                                            <a asp-action="Index" asp-route-id="@item.ExactTypeID"><i class="fas fa-wrench"></i></a>
                                            @*<a asp-action="Delete" class="ml-2" asp-route-id="@item.ExactTypeID"><i class="fas fa-trash"></i></a>*@
                                            <a data-id="@item.ExactTypeID" data-name="@item.Name" class="ml-2 open-AddBookDialog" data-toggle="modal" data-target="#deleteModal" href="#deleteModal"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <label class="control-label mb-3"><i class="fas fa-folder-plus mr-2"></i>Dodaj</label>
                            <div class="form-group">
                                <label asp-for="GeneralTypeID" class="control-label small"></label>
                                <select asp-for="GeneralTypeID" class="form-control" asp-items="ViewBag.GeneralTypeID"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Utwórz" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Button trigger modal -->
@*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEdit">
        Launch demo modal
    </button>*@

<!-- Modal -->
@if (ViewBag.Modal != null)
{
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-action="Delete" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            Czy na pewno chcesz usunąć:
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="VehicleID" id="bookId" value="" />
                        <input type="text" name="name" id="name" value="" disabled class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Zamknij</button>
                        <button type="submit" class="btn btn-sm btn-primary">Usuń</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
        $(document).on("click", ".open-AddBookDialog", function () {
             var myBookId = $(this).data('id');
             var myName = $(this).data('name');
             $(".modal-body #bookId").val( myBookId );
            $(".modal-body #name").val(myName);
             // As pointed out in comments,
             // it is unnecessary to have to manually call the modal.
             // $('#addBookDialog').modal('show');
        });
</script>
