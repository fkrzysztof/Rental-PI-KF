@model Rental.Data.Data.Rental.RentalVehicle

@{
    ViewData["Title"] = "Edit";
}
@using Rental.Data.Data.Areas.Identity.Data

<div class="row mb-4">

    <div class="col-12 mt-2">
        <button asp-action="Index" class="btn text-primary float-left"><i class="fas fa-chevron-left"></i> Powrót</button>
    </div>


    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index">Lista</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active disabled" asp-action="Create">Utwórz</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" asp-action="Edit">Edycja</a>
            </li>
        </ul>
    </div>
    <div class="col-md-12">
        <div class="card border-top-0 rounded-0 rounded-bottom">
            <div class="card-body">
                <form asp-action="Create" asp-controller="RentalVehicles">
                    <div class="row justify-content-center">

                        <div class="col-lg-7 mt-2">

                            <div class="row h-100 no-gutters">
                                <div class="col-12">

                                    <div class="card">
                                        <div class="card-header">
                                            <i class="fas fa-user-circle"></i> Opcje wypożyczenia
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    @*<input type="hidden" asp-for="RentalVehicleID" value="@Model.RentalVehicleID" />*@
                                                    <div class="form-group">
                                                        <label for="formGroupExampleInput">Od dnia:</label>
                                                        <input type="date" class="form-control" asp-for="From">
                                                        @*<input type="date" class="form-control" asp-for="From" value="Model.From.Date.ToString("yyyy-MM-dd")">*@
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="formGroupExampleInput2">Do dnia:</label>
                                                        <input type="date" class="form-control" asp-for="To">
                                                        @*<input type="date" class="form-control" asp-for="To" value="Model.To.Date.ToString("yyyy-MM-dd")">*@
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label for="formGroupExampleInput">Miejsce odbioru:</label>
                                                        <select class="form-control" asp-for="RentalFromLocationId" asp-items="@ViewBag.Cities">
                                                            <option disabled selected>Wybierz..</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="formGroupExampleInput2">Miejsce zwrotu:</label>
                                                        <select class="form-control" asp-for="RentalToLocationId" asp-items="@ViewBag.Cities">
                                                            <option disabled selected>Wybierz..</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <labe class="control-label">Status:</labe>
                                                        <select asp-for="RentalStatusID" class="form-control" asp-items="ViewBag.RentalStatusID"></select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label for="formGroupExampleInput2">Adnotacje</label>
                                                        <textarea class="form-control" asp-for="Annotations" rows="8"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-12 align-self-end mt-sm-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <i class="fas fa-user-circle"></i> Dane Klienta
                                        </div>
                                        <div class="card-body">
                                            <div class="row">

                                                <div class="col-12">
                                                    <div class="row h-100">
                                                        <div class="col-sm-12">
                                                            <div class="form-group card p-2 h-100">
                                                                <label for="exampleFormControlSelect2">Example multiple select</label>
                                                                <select multiple class="form-control h-100 border-0 p-0" asp-items="@ViewBag.Customers" asp-for="ApplicationUserID">
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mt-4 text-left">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-check mr-2"></i>Zapisz</button>

                                    <a asp-action="Index"><i class="fas fa-chevron-left mr-2"></i>Powrót</a>
                                </div>
                            </div>
                            @*</form>*@
                        </div>

                        <div class="col-lg-4 ml-lg-4 mt-2">
                            <div class="card">
                                <div class="card-header">
                                    <i class="fas fa-car"></i> Pojazd
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="row h-100">
                                                <div class="col-sm-12">
                                                    <div class="form-group card p-2 h-100">
                                                        <label for="exampleFormControlSelect2">Example multiple select</label>
                                                        <select multiple class="form-control h-100 border-0 p-0" asp-items="@ViewBag.Vehicles" asp-for="VehicleID">
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    </form>
            </div>
        </div>
    </div>
</div>
