<div class="col-md-12">
    Dodaj użytkownika
</div>
<div class="col-md-12">
    <form asp-action="AddUser" class="form-row">
        <div class="form-group col-md-6">
            <input type="hidden" class="form-control" name="roleName" value="@ViewBag.UserRole" />
            <input type="hidden" class="form-control" name="action" value="@ViewBag.Action" />
            <select name="id" class="custom-select mr-sm-2" asp-items="@ViewBag.UserAll">
                <option>Wybierz urzytkownika..</option>
            </select>
        </div>
        <div class="form-group col-md-1">
            <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i></button>
        </div>
    </form>
</div>

